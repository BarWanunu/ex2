// Post.test.js
import React from 'react';
import { render, fireEvent } from '@testing-library/react';
import '@testing-library/jest-dom';
import Post from './Post';

// Mock the onDelete and onEdit functions since they are not relevant for this test
const mockFunctions = {
  onDelete: jest.fn(),
  onEdit: jest.fn(),
};

test('increases likes count when like button is clicked', () => {
  const { getByText } = render(
    <Post
      id={1}
      text="Sample post text"
      profile="John Doe"
      date="2022-02-14"
      img="sample.jpg"
      {...mockFunctions}
    />
  );

  // Initially, there should be no likes
  expect(getByText('0 Likes')).toBeInTheDocument();

  // Click the like button
  fireEvent.click(getByText('Like'));

  // Now, after clicking, there should be 1 like
  expect(getByText('1 Like')).toBeInTheDocument();
});
